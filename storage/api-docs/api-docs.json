{
    "openapi": "3.0.0",
    "info": {
        "title": "AQS-TRACKING",
        "version": "1.0.0"
    },
    "paths": {
        "/api/allhods": {
            "get": {
                "summary": "fetch all hods",
                "operationId": "4729e367f6132179ccfada99d4e665a8",
                "responses": {
                    "200": {
                        "description": "Successful response"
                    }
                },
                "security": [
                    {
                        "Bearer": []
                    }
                ]
            }
        },
        "/api/register": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Register a new user",
                "description": "Register a new user and return the inserted data",
                "operationId": "registerUser",
                "parameters": [
                    {
                        "name": "hod_name",
                        "in": "query",
                        "description": "enter hod name",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "email",
                        "in": "query",
                        "description": "User's email",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "contact_number",
                        "in": "query",
                        "description": "User's contact number",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "password",
                        "in": "query",
                        "description": "enter password",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "password_confirmation",
                        "in": "query",
                        "description": "enter repeat password",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User successfully registered",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "hod_name": {
                                            "type": "string",
                                            "example": "kirabo phionah"
                                        },
                                        "email": {
                                            "type": "string",
                                            "example": "kirabo@gmail.com"
                                        },
                                        "contact_number": {
                                            "type": "string",
                                            "example": "0785643266"
                                        },
                                        "password": {
                                            "type": "string",
                                            "example": "123@we"
                                        },
                                        "password_confirmation": {
                                            "type": "string",
                                            "example": "123@we"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad user input"
                    },
                    "401": {
                        "description": "Unauthenticated"
                    },
                    "403": {
                        "description": "Forbidden"
                    },
                    "404": {
                        "description": "Resource not found"
                    }
                },
                "security": [
                    {
                        "Bearer": []
                    }
                ]
            }
        },
        "/api/login": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Login user",
                "description": "Authenticate a user and return a token",
                "operationId": "loginUser",
                "parameters": [
                    {
                        "name": "email",
                        "in": "query",
                        "description": "User's email",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "email"
                        }
                    },
                    {
                        "name": "password",
                        "in": "query",
                        "description": "User's password",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User successfully logged in",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "user": {
                                            "properties": {
                                                "email": {
                                                    "type": "string",
                                                    "example": "kirabo@gmail.com"
                                                },
                                                "password": {
                                                    "type": "string",
                                                    "example": "0785643266"
                                                }
                                            },
                                            "type": "object"
                                        },
                                        "authorization": {
                                            "properties": {
                                                "token": {
                                                    "type": "string",
                                                    "example": "your-jwt-token"
                                                },
                                                "type": {
                                                    "type": "string",
                                                    "example": "bearer"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized: Wrong credentials"
                    },
                    "403": {
                        "description": "Forbidden"
                    }
                },
                "security": [
                    {
                        "Bearer": []
                    }
                ]
            }
        },
        "/api/hods/employee/create": {
            "post": {
                "tags": [
                    "Employee Management"
                ],
                "summary": "Add a new employee",
                "description": "Create a new employee and send an email with a default password",
                "operationId": "addEmployee",
                "parameters": [
                    {
                        "name": "employee_name",
                        "in": "query",
                        "description": "Employee's name",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "maxLength": 255
                        }
                    },
                    {
                        "name": "email",
                        "in": "query",
                        "description": "Employee's company email (must be unique)",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "email",
                            "maxLength": 255
                        }
                    },
                    {
                        "name": "personalemail",
                        "in": "query",
                        "description": "Employee's personal email",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "email",
                            "maxLength": 255
                        }
                    },
                    {
                        "name": "contact_number",
                        "in": "query",
                        "description": "Employee's contact number",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "minLength": 10
                        }
                    },
                    {
                        "name": "position",
                        "in": "query",
                        "description": "Employee's position",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "maxLength": 255
                        }
                    },
                    {
                        "name": "hod_fk_id",
                        "in": "query",
                        "description": "ID of the HOD creating the employee",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Employee successfully created and email sent",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Employee created successfully, email sent!"
                                        },
                                        "employee": {
                                            "properties": {
                                                "employee_name": {
                                                    "type": "string",
                                                    "example": "kirabo"
                                                },
                                                "email": {
                                                    "type": "string",
                                                    "example": "pk@gmail.com"
                                                },
                                                "personalemail": {
                                                    "type": "string",
                                                    "example": "phionahk1@gmail.com"
                                                },
                                                "contact_number": {
                                                    "type": "string",
                                                    "example": "0785643266"
                                                },
                                                "position": {
                                                    "type": "string",
                                                    "example": "Software Developer"
                                                },
                                                "hod_fk_id": {
                                                    "type": "integer",
                                                    "example": 18
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad user input"
                    },
                    "401": {
                        "description": "Unauthenticated"
                    },
                    "403": {
                        "description": "Forbidden"
                    },
                    "404": {
                        "description": "Resource not found"
                    }
                },
                "security": [
                    {
                        "Bearer": []
                    }
                ]
            }
        }
    },
    "tags": [
        {
            "name": "Authentication",
            "description": "Authentication"
        },
        {
            "name": "Employee Management",
            "description": "Employee Management"
        }
    ],
    "components": {
        "securitySchemes": {
            "Bearer": {
                "type": "apiKey",
                "description": "Enter token in format (Bearer <token>)",
                "name": "Authorization",
                "in": "header"
            }
        }
    },
    "security": {
        "Bearer": {
            "type": "http",
            "scheme": "bearer",
            "bearerFormat": "JWT"
        }
    }
}